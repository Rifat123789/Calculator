#include <iostream>

using namespace std;

int main()
{ int N1, N2;
char Operation;
cout << "Enter an operation you would like to execute ( +, -, *, /)" << ": " << endl;
    cin >> Operation;
    cout << "Enter the value of N1" << endl;
    cin >> N1;
    cout << "Enter the value of N2" << endl;
    cin >> N2;
    if (Operation == '+') {
        cout << "Addition of 2 numbers" << ": " <<  (N1 + N2) << endl;

    } else if (Operation == '-') {
    cout << "Subtraction of 2 numbers " << ": " << (N1 - N2) << endl;}
    else if (Operation == '*') {
    cout << "Multiplication of 2 numbers " << ": " << (N1 * N2) << endl;}
    else if (Operation == '/') {
        if (N2 != 0) {
            cout << "Division of 2 numbers: " << (N1 / N2) << endl;
        } else {
            cout << "Error: Division by zero is not allowed." << endl;
        }
    } else {
        cout << "Error: Invalid operation." << endl;
    }
return 0;



}
